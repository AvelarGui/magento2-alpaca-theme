<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    layout="1column"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="content">
            <block
                class="Magento\Framework\View\Element\Template"
                name="content.catalog"
                template="Magento_Catalog::content-catalog.phtml"
            >
                <block
                    class="Magento\Catalog\Block\Product\ListProduct"
                    name="category.products.list"
                    template="Magento_Catalog::product/list.phtml"
                />
            </block>
        </referenceContainer>
        <move element="catalog.leftnav" destination="content.catalog" before="-"/>
    </body>
</page>
