                                                                    class="product-grid-item__primary-action"
                                                                    data-role="tocart-form"
                                                                    data-product-sku="<?= $block->escapeHtmlAttr($_item->getSku()) ?>"
                                                                    action="<?= $block->escapeUrl($postParams['action']) ?>"
                                                                    method="post"
                                                                >
                                                                    <input
                                                                        type="hidden"
                                                                        name="product"
                                                                        value="<?= /* @noEscape */ $postParams['data']['product'] ?>"
                                                                    >
                                                                    <input
                                                                        type="hidden"
                                                                        name="<?= /* @noEscape */ Magento\Framework\App\Action\Action::PARAM_NAME_URL_ENCODED ?>"
                                                                        value="<?= /* @noEscape */ $postParams['data'][Magento\Framework\App\Action\Action::PARAM_NAME_URL_ENCODED] ?>"
                                                                    >
                                                                    <?= $block->getBlockHtml('formkey') ?>
                                                                    <button
                                                                        class="
                                                                            button
                                                                            button--add-to
                                                                            tocart
                                                                            action
                                                                        "
                                                                        type="submit"
                                                                        aria-label="<?= $block->escapeHtmlAttr(__('Add to Cart')) ?>"
                                                                        data-testid="add-to-cart-button"
                                                                    >
                                                                        <svg
                                                                            class="icon button__icon"
                                                                            role="presentation"
                                                                            focusable="false"
                                                                        >
                                                                            <use xlink:href="<?= $block->escapeUrl($block->getViewFileUrl('/images/icons-sprite.svg#shopping-cart')) ?>"></use>
                                                                        </svg>
                                                                    </button>
                                                                </form>
                                                                <?php if (!$block->isRedirectToCartEnabled()) :?>
                                                                    <script type="text/x-magento-init">
                                                                    {
                                                                        "[data-role=tocart-form], .form.map.checkout": {
                                                                            "catalogAddToCart": {
                                                                                "product_sku": "<?= $block->escapeJs($_item->getSku()) ?>"
                                                                            }
                                                                        }
                                                                    }
                                                                    </script>
                                                                <?php endif; ?>
                                                            <?php endif; ?>
                                                        </div>
                                                    <?php else: ?>
                                                        <?php if ($_item->getIsSalable()): ?>
                                                            <div class="stock available">
                                                                <?= __('In stock') ?>
                                                            </div>
                                                        <?php else: ?>
                                                            <div class="stock unavailable">
                                                                <?= __('Out of stock') ?>
                                                            </div>
                                                        <?php endif; ?>
                                                    <?php endif; ?>
                                                <?php endif; ?>
                                            </div>
                                        <?php endif; ?>
                                    </div>
                                </section>
                            </div>
                        </div>
                    <?php endforeach; ?>
                </div>
            </div>
            <div class="slider__dots"></div>
        </div>
    </div>
<?php endif; ?>
