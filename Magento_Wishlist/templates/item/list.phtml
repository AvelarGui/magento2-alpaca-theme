<?php
/** @var \Magento\Wishlist\Block\Customer\Wishlist\Items $block */
$columns = $block->getColumns();
?>

<?php if (count($block->getItems())): ?>
    <div class="catalog-list__products wishlist-items">
        <?php foreach ($block->getItems() as $item): ?>
            <div
                data-row="product-item"
                class="
                    catalog-list-item
                    catalog-list__item
                    product-item
                    product-item-info
                "
                id="item_<?= $item->getId(); ?>"
            >
                <div class="product dashboard__product">
                    <?php foreach ($columns as $column): ?>
                        <?php
                            $column->setItem($item);
                            echo $column->toHtml($item);
                        ?>
                    <?php endforeach; ?>
                </div>
            </div>
        <?php endforeach; ?>
    </div>
<?php else: ?>
    <div class="message info empty">
        <?= /* @escapeNotVerified */ __('This Wish List has no Items'); ?>
    </div>
<?php endif; ?>

<?php foreach ($columns as $column): ?>
    <?= /* @escapeNotVerified */ $column->getAdditionalHtml(); ?>
<?php endforeach; ?>
