<picture
    class="image {{ class }}"
    {{{ attributes }}}
>
    {{#each sources}}
        <source
            data-srcset="{{ src }}"
            media="{{ mediaQuery }}"
        />
    {{/each}}

    <img
        class="lazyload {{ imgClass }}"
        src="data:image/gif;base64,iVBORw0KGgoAAAANSUhEUgAAAAoAAAABCAQAAABN/Pf1AAAAC0lEQVR42mNkwAIAACoAAgu1Hc4AAAAASUVORK5CYII="
        data-src="{{ defaultSrc }}"
        alt="{{ alt }}"
        {{{ imgAttributes }}}
    />
</picture>
