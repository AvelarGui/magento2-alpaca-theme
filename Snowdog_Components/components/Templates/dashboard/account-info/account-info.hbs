<div class="page-wrapper">
    {{ render '@header' }}
    <main
        id="maincontent"
        class="
            dashboard
            container
            {{ class }}
        "
    >
        {{ render '@breadcrumbs' breadcrumbs }}
        <div class="row">
            <div
                class="
                    col-xs-12
                    col-lg-3
                    {{ sidebarClass }}
                "
            >
                {{ render '@dashboard-nav' }}
            </div>
            <div
                class="
                    col-xs-12
                    col-lg-9
                    {{ contentClass }}
                "
            >
                {{ render '@heading' heading }}
                {{ render '@dashboard-form' }}
                {{ render '@actions-group' buttons }}
            </div>
        </div>
    </main>
</div>
{{ render '@footer' }}
