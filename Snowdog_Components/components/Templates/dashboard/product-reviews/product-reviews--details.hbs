<div class="page-wrapper">
    {{ render '@header' }}

    <div class="dashboard container">
        {{ render '@breadcrumbs' breadcrumbs }}
        <div class="row">
            <div class="col-xs-12 col-lg-3 dashboard__sidebar">
                {{ render '@dashboard-nav' }}
            </div>
            <div class="col-xs-12 col-lg-9 dashboard__content">
                {{ render '@heading' heading }}
                {{ render '@heading' title }}

                <a
                    href="#"
                    class="product-reviews__image"
                    title="{{ product.name.text }}"
                >
                    {{ render '@image' product.image }}
                </a>

                <div class="product-reviews__details">
                    <a href="#" title="{{ product.name.text }}">
                        {{ render '@heading' product.name }}
                    </a>
                    {{ render '@review--add' }}
                </div>

                {{ render '@heading' yourReview }}

                {{ render '@review' }}
            </div>
        </div>
    </div>
</div>

{{ render '@footer' }}
