<div class="page-wrapper">
    {{ render '@header' }}

    <main
        id="maincontent"
        class="dashboard container"
    >
        {{ render '@breadcrumbs' breadcrumbs }}
        <div class="row">
            <div class="col-xs-12 col-lg-3 dashboard__sidebar">
                {{ render '@dashboard-nav' }}
            </div>
            <div class="col-xs-12 col-lg-9 dashboard__content">
                {{ render '@heading' heading }}
                {{> '@dashboard-table' reviews }}

                {{> '@action' button }}
            </div>
        </div>
    </main>
</div>

{{ render '@footer' }}
