<div class="page-wrapper">
    {{ render '@header' }}

    <main
        id="maincontent"
        class="
            dashboard
            container
            {{ class }}
        "
    >
        {{ render '@breadcrumbs' breadcrumbs }}
        <div class="row">
            <div
                class="
                    col-xs-12
                    col-lg-3
                    {{ sidebarClass }}
                "
            >
                {{ render '@dashboard-nav' }}
            </div>
            <div
                class="
                    col-xs-12
                    col-lg-9
                    {{ contentClass }}
                "
            >
                {{ render '@heading' heading }}
                <h2 class="heading dashboard__title">
                    {{ title }}
                </h2>

                <div class="row">
                    {{ render '@information' info }}
                </div>

                {{ render '@input' contactEmailAddress }}

                {{ render '@dashboard-form' form }}

                {{ render '@actions-group' addReturnItem }}

                {{ render '@input--textarea' comments }}

                {{ render '@actions-group' action }}
            </div>
        </div>
    </main>
</div>

{{ render '@footer' }}
