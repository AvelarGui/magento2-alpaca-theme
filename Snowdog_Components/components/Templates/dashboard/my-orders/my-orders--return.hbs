<div class="page-wrapper">
    {{ render '@header' }}

    <div class="dashboard container">
        {{ render '@breadcrumbs' breadcrumbs }}
        <div class="row">
            <div class="col-xs-12 col-lg-3 dashboard__sidebar">
                {{ render '@dashboard-nav' }}
            </div>
            <div class="col-xs-12 col-lg-9 dashboard__content">
                {{ render '@heading' heading }}
                <h2 class="heading dashboard__title">
                    {{ title }}
                </h2>

                <div class="row">
                    {{> '@information' info }}
                </div>

                {{> '@input' contactEmailAddress }}

                {{> '@dashboard-form' form }}

                {{> '@action' addReturnItem }}

                {{> '@input--textarea' comments }}

                {{> '@action' action }}
            </div>
        </div>
    </div>
</div>

{{ render '@footer' }}
