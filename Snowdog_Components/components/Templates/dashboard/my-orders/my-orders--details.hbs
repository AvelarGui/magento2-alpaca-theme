<div class="page-wrapper">
    {{ render '@header' }}

    <div class="dashboard container">
        {{ render '@breadcrumbs' breadcrumbs }}
        <div class="row">
            <div class="col-xs-12 col-lg-3 dashboard__sidebar">
                {{ render '@dashboard-nav' }}
            </div>
            <div class="col-xs-12 col-lg-9 dashboard__content">
                {{ render '@heading' heading }}
                <div class="dashboard__handler">
                    <h2 class="heading dashboard__title--wrapped">
                        {{ orderNumber }}
                    </h2>

                    <span class="dashboard__status">
                        {{ orderStatus }}
                    </span>
                </div>

                {{> '@action' orderActions }}

                {{> '@dashboard-table' itemsOrdered }}

                {{> '@dashboard-table' invoice }}

                {{> '@dashboard-table' orderShipment }}

                <h2 class="heading dashboard__title">
                    {{ orderInfoTitle }}
                </h2>

                <div class="row">
                    {{> '@information' orderInfo }}
                </div>

                {{> '@action' action }}
            </div>
        </div>
    </div>
</div>

{{ render '@footer' }}
