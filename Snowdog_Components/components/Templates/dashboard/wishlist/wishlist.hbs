<div class="page-wrapper">
    {{ render '@header' }}

    <main
        id="maincontent"
        class="
            dashboard
            container
            {{ class }}
        "
    >
        {{ render '@breadcrumbs' breadcrumbs }}
        <div class="row">
            <div
                class="
                    col-xs-12
                    col-lg-3
                    {{ sidebarClass }}
                "
            >
                {{ render '@dashboard-nav' }}
            </div>
            <div
                class="
                    col-xs-12
                    col-lg-9
                    wishlist
                    {{ contentClass }}
                "
            >
                {{ render '@heading' heading }}
                <div class="row wishlist__grid">
                    {{#each wishlistItems}}
                        <div class="wishlist__item col-sm-4">
                            <a
                                href="#"
                                aria-label="{{ product.name.text }}"
                                class="wishlist__link"
                            >
                                {{ render '@image' product.image }}
                            </a>
                            <div class="wishlist__item-name">
                                {{ render '@link' product.name }}
                            </div>
                            {{ render '@price' product.price merge=true }}

                            {{ render '@input--textarea' textarea }}

                            <div class="wishlist__item-inner">
                                {{ render '@input--inline' qty }}
                                <div class="wishlist__item-actions">
                                    {{ render '@button--icon' editIcon }}
                                    {{ render '@button--icon' removeIcon }}
                                </div>
                                <div
                                    class="
                                        wishlist__item-actions
                                        wishlist__item-actions--to-cart
                                    "
                                >
                                    {{ render '@button' addToCart }}
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
                <div class="action">
                    <div class="action__handler">
                        {{#each actions}}
                            {{ render '@button--secondary' this }}
                        {{/each}}
                    </div>
                    <div class="action__handler margin-vc-m">
                        {{ render '@link' backLink }}
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

{{ render '@footer' }}
