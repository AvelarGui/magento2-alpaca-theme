<div class="page-wrapper">
    {{ render '@header' }}

    <main
        id="maincontent"
        class="
            dashboard
            container
            {{ class }}
        "
    >
        {{ render '@breadcrumbs' breadcrumbs }}
        <div class="row">
            <div
                class="
                    col-xs-12
                    col-lg-3
                    {{ sidebarClass }}
                "
            >
                {{ render '@dashboard-nav' }}
            </div>
            <div
                class="
                    col-xs-12
                    col-lg-9
                    {{ contentClass }}
                "
            >
                {{ render '@heading' heading }}


                <form class="dashboard-form invitations">
                    {{ render '@heading' headingForm }}

                    <fieldset class="fieldset">
                        <legend
                            class="
                                fieldset__legend
                                {{ legend.class}}
                            "
                        >
                            {{ legend.text }}
                        </legend>

                        <div id="invitations__email-wrapper">
                            <div class="field {{ field.class }}">
                                {{ render '@input' emailInput }}
                            </div>

                            <div class="field {{ field.class }}">
                                {{ render '@input' emailInput }}

                                {{ render '@button--secondary' buttonRemove }}
                            </div>
                        </div>

                        {{ render '@button' buttonAdd }}

                        {{ render '@input--textarea' textarea }}

                    </fieldset>

                    {{ render '@actions-group' actions }}

                </form>
            </div>
        </div>
    </main>
</div>

{{ render '@footer' }}
