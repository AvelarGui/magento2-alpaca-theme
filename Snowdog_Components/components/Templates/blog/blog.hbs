<div class="page-wrapper">
    {{ render '@header' }}
    {{ render '@breadcrumbs' breadcrumbs }}
    <main
        id="maincontent"
        class="container"
    >
        <div class="blog row between-lg">
            <div class="blog__articles {{ articlesClass }}">
                {{ render '@list' articlesList }}
                {{ render '@pager' }}
            </div>
            <aside class="blog__aside {{ asideClass }}">
                <div class="">
                    {{ render '@heading' recommendedHeading }}
                    <!--render '@list--number' }}-->
                    {{ render '@list' }}
                </div>
                <div class="">
                    {{ render '@heading' categoryHeading }}
                    {{ render '@list--link' categories merge=true }}
                </div>
            </aside>
        </div>
    </main>
</div>

{{ render '@footer' }}
