<div class="page-wrapper">
    {{ render '@header' }}

    <div class="container">
        {{ render '@breadcrumbs' breadcrumbs }}
        {{ render '@heading' mainHeading merge=true }}

        <div class="row cart">
            <div class="col-xs-12 col-lg-4 col-xl-3 cart__summary">
                <div class="cart-summary">
                    {{ render '@heading' summary.heading }}

                    <div class="cart-summary__details">
                        {{ render '@heading' summary.estimate }}

                         <ul class="cart-summary__list">
                            {{#each summary.items }}
                                <li class="cart-summary__list-item">
                                    <span class="cart-summary__label">
                                        {{ label }}
                                    </span>

                                    <span class="cart-summary__value">
                                        {{ value }}
                                    </span>
                                </li>
                            {{/each}}
                        </ul>
                    </div>

                    <div class="cart-summary__total">
                        {{ render '@heading' summary.total }}

                        <span class="cart-summary__amount text-right">
                            {{ summary.amount }}
                        </span>
                    </div>

                    {{ render '@button' summary.button }}

                    {{ render '@button--link' summary.link }}
                </div>
            </div>

            <div class="col-xs-12 col-lg-8 col-xl-9">
                <div class="cart__product-grid">


                    {{ render '@button--secondary' items.updateCart }}
                </div>

                {{ render '@dropdown-list' dropdownList }}
            </div>
        </div>
    </div>
</div>

{{ render '@footer' }}
