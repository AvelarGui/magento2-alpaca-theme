<div class="page-wrapper">
    {{ render '@header' }}

    <main
        id="maincontent"
        class="
            dashboard
            container
            {{ class }}
        "
    >
        {{ render '@breadcrumbs' breadcrumbs }}
        <div class="row">
            <div
                class="
                    col-xs-12
                    col-lg-3
                    {{ sidebarClass }}
                "
            >
                {{ render '@dashboard-nav' }}
            </div>
            <div
                class="
                    col-xs-12
                    col-lg-9
                    {{ contentClass }}
                "
            >

                {{ render '@heading' heading }}

                {{#if messages }}
                    <div id="messages">
                        {{ render '@message' }}
                    </div>
                {{/if}}

                <div class="dashboard__handler">
                    {{ render '@heading' quoteName merge=true }}

                    <span class="dashboard__status">
                        {{ quoteStatus }}
                    </span>
                </div>

                {{ render '@list--table' quoteInfo merge=true }}

                {{ render '@dashboard-actions-toolbar' quoteActions merge=true }}

                {{ render '@tab' quoteTabs }}

                {{ render '@dashboard-items' shipping merge=true }}
            </div>
        </div>
    </main>
</div>

{{ render '@footer' }}
