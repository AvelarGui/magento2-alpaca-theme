<div class="dashboard-items {{ class }}">
    {{#if title }}
        {{#if link}}
            <div class="dashboard-table__header">
                <h2 class="dashboard-table__title">
                    {{ title }}
                </h2>
                {{ render '@link' link }}
            </div>
        {{else}}
            <div class="dashboard-items__header">
                <h2 class="dashboard-items__title {{ titleClass }}">
                    {{ title }}
                </h2>
            </div>
        {{/if}}
    {{/if}}
    {{#if informations }}
        <div class="row {{ contentClass }}">
            {{#each informations }}
                <div class="dashboard-items__item {{ this.class }}">
                    {{#if this.title }}
                        <h3 class="heading dashboard-items__subtitle margin-bottom-l">
                            {{ this.title }}
                        </h3>
                    {{/if}}
                    {{#if this.information }}
                        <div class="{{ this.addressClass }}">
                            {{ this.information }}
                        </div>
                    {{/if}}
                    {{#if actions }}
                        {{ render '@actions-group' actions }}
                    {{/if}}
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>
