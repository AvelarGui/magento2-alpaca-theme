<div class="dashboard-items {{ class }}">
    {{#if title }}
        {{#unless link}}
            <div class="dashboard-items__header">
                <h2
                    class="
                        dashboard-items__title
                        margin-bottom-m
                        {{ titleClass }}
                    "
                >
                    {{ title }}
                </h2>
            </div>
        {{/unless}}
        {{#if link}}
            <div class="dashboard-table__header">
                <h2 class="dashboard-table__title {{ titleClass }}">
                    {{ title }}
                </h2>
                {{ render '@link' link }}
            </div>
        {{/if}}
    {{/if}}
    {{#if informations }}
        <div class="row {{ contentClass }}">
            {{#each informations }}
                <div class="dashboard-items__item {{ this.class }}">
                    {{#if this.title }}
                        <h3 class="heading dashboard-items__subtitle">
                            {{ this.title }}
                        </h3>
                    {{/if}}
                    {{#if this.information }}
                        <div class="{{ this.addressClass }}">
                            {{ this.information }}
                        </div>
                    {{/if}}
                    {{#if actions }}
                        {{ render '@actions-group' actions }}
                    {{/if}}
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>
