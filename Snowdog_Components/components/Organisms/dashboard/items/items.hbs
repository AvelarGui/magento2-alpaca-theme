<div class="dashboard-items {{ class }}">
    {{#if title }}
        <h2 class="dashboard-items__title {{ titleClass }}">
            {{ title }}
        </h2>
    {{/if}}
    {{#if informations }}
        <div class="row {{ contentClass }}">
            {{#each informations }}
                <div class="dashboard-items__item {{ this.class }}">
                    {{#if this.title }}
                        <h3 class="heading">
                            {{ this.title }}
                        </h3>
                    {{/if}}
                    {{#if this.information }}
                        <div class="dashboard-items__address {{ this.addressClass }}">
                            {{ this.information }}
                        </div>
                    {{/if}}
                    {{#if actions }}
                        {{> '@action' actions }}
                    {{/if}}
                </div>
            {{/each}}
        </div>
    {{/if}}
</div>
