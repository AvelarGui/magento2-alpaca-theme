<div class="dashboard-table {{ class }}">
    {{#if title }}
        <div class="dashboard-table__header">
            <h2 class="heading dashboard-table__title">
                {{ title }}
            </h2>
            {{#if link}}
                {{ render '@link' link }}
            {{/if}}
        </div>
    {{/if }}
    <div class="dashboard-table__content">
        {{ render '@table' table }}
    </div>
</div>
