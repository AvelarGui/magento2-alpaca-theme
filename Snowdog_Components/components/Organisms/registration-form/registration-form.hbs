
<div class="registration-form">
    <p class="registration-form__info">
        {{{ signUpInfo }}}
    </p>
    <form class="registration-form__form">
        <fieldset
            class="
                fieldset registration-form__fieldset
                {{ personalSection.fieldset.class }}
            "
            {{ personalSection.fieldset.attributes }}
        >
            <legend
                class="
                    fieldset__legend registration-form__legend
                    {{ personalSection.legend.class }}
                "
                {{ personalSection.legend.attributes }}
            >
                {{ personalSection.legend.text }}
            </legend>
            {{ render '@input' firstName }}
            {{ render '@input' lastName }}
            {{ render '@checkbox' newsletterCheckbox }}
        </fieldset>
        <fieldset
            class="
                fieldset registration-form__fieldset
                {{ signInSection.fieldset.class }}
            "
            {{ signInSection.fieldset.attributes }}
        >
            <legend
                class="
                    registration-form__legend
                    {{ signInSection.legend.class }}
                "
                {{ signInSection.legend.attributes }}
            >
                {{ signInSection.legend.text }}
            </legend>
            {{ render '@input' email }}
            <div class="registration-form__password-wrapper">
                <div class="registration-form__input-wrapper">
                    {{ render '@input--password' password merge=true }}
                </div>
                <div class="registration-form__password-strength">
                    {{ render '@password-strength' passwordStrength.none }}
                </div>
            </div>
            <div class="registration-form__input-wrapper">
                {{ render '@input--password' passwordConfirmation merge=true }}
            </div>
        </fieldset>
        <div class="registration-form__actions">
            {{ render '@button' registrationButton }}
        </div>
        <div class="registration-form__validation-tips">
            {{{ validationTips }}}
        </div>
    </form>
</div>
