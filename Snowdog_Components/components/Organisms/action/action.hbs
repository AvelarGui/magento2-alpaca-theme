<div class="action {{ class }}">
    {{#each sides }}
        <div class="action__handler">
            {{#each action }}
                {{#if button }}
                    {{ render '@button' button merge=true }}
                {{else}}
                    {{ render '@link' link merge=true }}
                {{/if}}
            {{/each }}
        </div>
    {{/each}}
</div>
