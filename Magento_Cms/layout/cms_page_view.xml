<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="css_class" xsi:type="string">text-center margin-vc-xl margin-bottom-xl</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="content" htmlTag="div" htmlClass="cms-page__content" />
    </body>
</page>
