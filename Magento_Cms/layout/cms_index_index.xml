<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main" htmlClass="container home">
            <container name="home-wrapper-top"
                       as="home-wrapper-top"
                       htmlTag="section"
                       htmlClass="home__wrapper"
                       before="-"
            >
                <block class="Magento\Cms\Block\Block" name="home-top-banner">
                    <arguments>
                        <argument name="block_id" xsi:type="string">home-top-banner</argument>
                    </arguments>
                </block>
            </container>
            <container name="home-wrapper-middle"
                       as="home-wrapper-middle"
                       htmlTag="section"
                       htmlClass="home__wrapper grid"
                       after="home-wrapper-top"
            >
                <container name="home-middle-column-right"
                           as="home-wrapper-middle-right"
                           htmlTag="section"
                           htmlClass="grid__column grid__column--1-2 home__vertical-grid home__column-left"
                >
                    <block class="Magento\Cms\Block\Block" name="home-banner-middle-left-top">
                        <arguments>
                            <argument name="block_id" xsi:type="string">home-banner-middle-left-top</argument>
                        </arguments>
                    </block>
                    <block class="Magento\Cms\Block\Block" name="home-banner-middle-left-bottom">
                        <arguments>
                            <argument name="block_id" xsi:type="string">home-banner-middle-left-bottom</argument>
                        </arguments>
                    </block>
                </container>
                <container name="home-middle-column-left"
                           as="home-wrapper-middle-left"
                           htmlTag="section"
                           htmlClass="grid__column grid__column--1-2 home__column-right"
                >
                    <block class="Magento\Cms\Block\Block" name="home-banner-middle-right">
                        <arguments>
                            <argument name="block_id" xsi:type="string">home-banner-middle-right</argument>
                        </arguments>
                    </block>
                </container>
            </container>
            <container name="home-wrapper-bottom"
                       as="home-wrapper-bottom"
                       htmlTag="section"
                       htmlClass="home__wrapper grid"
                       after="home-wrapper-middle"
            >
                <block class="Magento\Cms\Block\Block" name="home-banner-bottom-left">
                    <arguments>
                        <argument name="block_id" xsi:type="string">home-banner-bottom</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="home-banner-bottom-middle">
                    <arguments>
                        <argument name="block_id" xsi:type="string">home-banner-bottom</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="home-banner-bottom-right">
                    <arguments>
                        <argument name="block_id" xsi:type="string">home-banner-bottom</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
