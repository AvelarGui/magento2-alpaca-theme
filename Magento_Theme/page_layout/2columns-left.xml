<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="1column"/>
    <referenceContainer name="columns" htmlClass="columns columns--left">
        <referenceContainer name="div.sidebar.main" htmlClass="columns__left sidebar" />
        <referenceContainer name="div.sidebar.additional" htmlClass="columns__left sidebar" />
    </referenceContainer>
    <move element="div.sidebar.main" destination="columns" before="main" />
    <move element="div.sidebar.additional" destination="columns" before="main" />
</layout>
