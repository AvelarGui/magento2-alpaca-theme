<?php if ($block->getCollection()->getSize()): ?>
    <?php if ($block->getUseContainer()): ?>
        <div>
    <?php endif; ?>
    <?php if ($block->getLastPageNum() > 1): ?>
        <nav class="pager">
            <ul
                class="pager__list"
                aria-labelledby="paging-label"
            >
                <li class="pager__item">
                    <?php $text = $block->getAnchorTextForPrevious() ? $block->getAnchorTextForPrevious() : ''; ?>
                    <a
                        class="
                            button
                            button--icon
                            pager__link
                            pager__link--prev
                        "
                        href="<?= $block->escapeUrl($block->getPreviousPageUrl()) ?>"
                        title="<?= $text ? $text : $block->escapeHtmlAttr(__('Previous')) ?>"
                        <?php if ($block->isFirstPage()): ?>
                            aria-label="<?= $block->escapeHtmlAttr(__("Link to previous page, disabled")) ?>"
                            disabled
                        <?php else: ?>
                            aria-label="<?= $block->escapeHtmlAttr(__("Link to previous page")) ?>"
                        <?php endif; ?>
                    >
                        <svg
                            class="icon pager__link-prev"
                            role="presentation"
                            focusable="false"
                        >
                            <use xlink:href="<?= $block->escapeUrl($block->getViewFileUrl('images/icons-sprite.svg#arrow-left')) ?>"></use>
                        </svg>
                    </a>
                </li>

                <?php if ($block->canShowFirst()): ?>
                    <li class="pager__item">
                        <a
                            class="pager__link"
                            href="<?= $block->escapeUrl($block->getFirstPageUrl()) ?>"
                        >
                            1
                        </a>
                    </li>
                <?php endif; ?>

                <?php if ($block->canShowPreviousJump()): ?>
                    <li class="pager__item">
                        <a
                            class="pager__link"
                            href="<?= $block->escapeUrl($block->getPreviousJumpUrl()) ?>"
                        >
                            <span>...</span>
                        </a>
                    </li>
                <?php endif; ?>

                <?php foreach ($block->getFramePages() as $_page): ?>
                    <?php if ($block->isPageCurrent($_page)): ?>
                        <li class="pager__item pager__item--current">
                            <?= $_page ?>
                        </li>
                    <?php else: ?>
                        <li class="pager__item">
                            <a
                                href="<?= $block->escapeUrl($block->getPageUrl($_page)) ?>"
                                class="pager__link"
                            >
                                <?= $_page ?>
                            </a>
                        </li>
                    <?php endif; ?>
                <?php endforeach; ?>

                <?php if ($block->canShowNextJump()): ?>
                    <li class="pager__item">
                        <a
                            class="pager__link"
                            href="<?= $block->escapeUrl($block->getNextJumpUrl()) ?>"
                        >
                            <span>...</span>
                        </a>
                    </li>
                <?php endif; ?>

                <?php if ($block->canShowLast()): ?>
                    <li class="pager__item">
                        <a
                            class="pager__link"
                            href="<?= $block->escapeUrl($block->getLastPageUrl()) ?>"
                        >
                            <?= $block->getLastPageNum() ?>
                        </a>
                    </li>
                <?php endif; ?>

                <li class="pager__item">
                    <?php $text = $block->getAnchorTextForNext() ? $block->getAnchorTextForNext() : ''; ?>
                    <a
                        class="
                            button
                            button--icon
                            pager__link
                            pager__link--next
                        "
                        href="<?= $block->escapeUrl($block->getNextPageUrl()) ?>"
                        title="<?= $text ? $text : $block->escapeHtmlAttr(__('Next')) ?>"
                        <?php if ($block->isLastPage()): ?>
                            aria-label="<?= $block->escapeHtmlAttr(__("Link to next page, disabled")) ?>"
                            disabled
                        <?php else: ?>
                            aria-label="<?= $block->escapeHtmlAttr(__("Link to next page")) ?>"
                        <?php endif; ?>
                    >
                        <svg
                            class="icon pager__link-prev"
                            role="presentation"
                            focusable="false"
                        >
                            <use xlink:href="<?= $block->escapeUrl($block->getViewFileUrl('images/icons-sprite.svg#arrow-right')) ?>"></use>
                        </svg>
                    </a>
                </li>
            </ul>
        </nav>
    <?php endif; ?>

    <?php if ($block->getUseContainer()): ?>
        </div>
    <?php endif; ?>
<?php endif; ?>
