<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="page.main.title">
            <arguments>
                <argument name="css_class" xsi:type="string">text-center margin-top-0 margin-vc-xl</argument>
            </arguments>
        </referenceBlock>

        <referenceContainer
            name="main"
            htmlClass="catalog-list__products"
        />
        <referenceContainer
            name="columns"
            htmlClass="catalog-list"
        />
        <referenceContainer
            name="div.sidebar.main"
            htmlClass="catalog-list__sidebar"
        />
        <referenceContainer
            name="div.sidebar.additional"
            htmlClass="catalog-list__sidebar-additional"
        />

        <!-- Moved blocks -->
        <move element="div.sidebar.main" destination="columns" before="main"/>
    </body>
</page>
